			break;
		case 3:// Sunday
			this.mAlarmData.setTuesday(milis);
			break;
		case 4:// Sunday
			this.mAlarmData.setWednesday(milis);
			break;
		case 5:// Sunday
			this.mAlarmData.setThursday(milis);
			break;
		case 6:// Sunday
			this.mAlarmData.setFriday(milis);
			break;
		case 7:// Sunday
			this.mAlarmData.setSaturday(milis);
			break;

		default:
			break;
		}
	}
