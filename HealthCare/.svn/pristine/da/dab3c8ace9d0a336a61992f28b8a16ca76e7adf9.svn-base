<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/healderlayout"
        style="@style/fillWidth"
        android:layout_height="40dip"
        android:background="@drawable/header" >

        <TextView
            android:id="@+id/heading1"
            style="@style/Headertitle"
            android:layout_centerInParent="true"
            android:text="@string/request_for_sponcer" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etRequestSponcer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:ems="10"
        android:hint="Request Note For Sponcer" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bSendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Requests" />

</LinearLayout>