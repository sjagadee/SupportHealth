    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
     <RelativeLayout
        android:id="@+id/healderlayout"
        style="@style/fillWidth"
        android:layout_height="40dip"
        android:background="@drawable/header" >

        <TextView
